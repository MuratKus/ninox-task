<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ninox Sign-up Tests" verbose="1">
    
    <!-- Smoke Tests - Critical path only -->
    <test name="Smoke Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.ninox.tests.SignUpTests"/>
        </classes>
    </test>
    
    <!-- Regression Tests - Comprehensive coverage -->
    <test name="Regression Tests" parallel="none">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="positive"/>
                <include name="negative"/>
                <include name="validation"/>
                <include name="integration"/>
                <include name="ui"/>
            </run>
        </groups>
        <classes>
            <class name="com.ninox.tests.SignUpTests"/>
        </classes>
    </test>
    
    <!-- Security Tests - Security-focused scenarios -->
    <test name="Security Tests" parallel="none">
        <groups>
            <run>
                <include name="security"/>
            </run>
        </groups>
        <classes>
            <class name="com.ninox.tests.SignUpTests"/>
        </classes>
    </test>
    
    <!-- Performance Tests - Timing and responsiveness -->
    <test name="Performance Tests" parallel="none">
        <groups>
            <run>
                <include name="performance"/>
            </run>
        </groups>
        <classes>
            <class name="com.ninox.tests.SignUpTests"/>
        </classes>
    </test>
    
    <!-- Full Test Suite - Everything -->
    <test name="Full Test Suite" parallel="none">
        <classes>
            <class name="com.ninox.tests.SignUpTests"/>
        </classes>
    </test>
    
</suite>